{
  "name": "web-draw-shared-canvas-backend",
  "version": "0.1.0",
  "description": "Backend for the Drawing App to synchronise the Picture between multiple instanzes",
  "private": true,
  "main": "index.js",
  "author": "Jonathan Schaeberle",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
