{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es6"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
